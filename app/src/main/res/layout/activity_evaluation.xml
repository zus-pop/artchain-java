<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/material_dynamic_neutral90"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"> <com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="220dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:layout_marginBottom="24dp">

    <ImageView
        android:id="@+id/paintingImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@color/material_dynamic_neutral70" android:contentDescription="Painting image"
        tools:src="@tools:sample/backgrounds/scenic" /> </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/competitorInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Competitor: John Doe"
        android:textSize="18sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/evaluationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Evaluate Submission"
        android:textSize="28sp"
        android:textColor="?attr/colorOnSurface"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-black" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Score (1-10)"
        app:helperText="Required"
        app:endIconMode="clear_text"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/scoreEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="2"
            android:maxLines="1"
            android:imeOptions="actionNext" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Feedback"
        app:helperText="Optional, but encouraged"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginBottom="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/feedbackEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="5"
            android:gravity="top"
            android:scrollbars="vertical" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submitButton"
        android:background="@drawable/button_red_rounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Evaluation"
        android:paddingVertical="14dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        android:textColor="?attr/colorOnPrimary" />

</LinearLayout>
</ScrollView>